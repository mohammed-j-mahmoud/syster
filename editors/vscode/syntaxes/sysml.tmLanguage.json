{
  "name": "SysML v2",
  "scopeName": "source.sysml",
  "fileTypes": ["sysml"],
  "patterns": [
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#comments" },
    { "include": "#strings" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sysml",
          "match": "\\b(if|then|else|for|while|loop|decide|merge|fork|join|accept|send|return|bind|when|at|after|until|first|entry|exit|do|transition|terminate|expose|render|assign|event|life)\\b"
        },
        {
          "name": "keyword.operator.logical.sysml",
          "match": "\\b(and|or|xor|not|implies|hastype|istype)\\b"
        },
        {
          "name": "storage.type.definition.sysml",
          "match": "\\b(part|port|action|state|constraint|requirement|attribute|connection|interface|allocation|item|occurrence|analysis|case|verification|use\\s+case|view|viewpoint|rendering|metadata|enum|concern|calc|flow)\\s+def\\b"
        },
        {
          "name": "storage.type.sysml",
          "match": "\\b(part|port|action|state|constraint|requirement|attribute|connection|interface|allocation|item|occurrence|analysis|case|verification|use\\s+case|view|viewpoint|rendering|ref|individual|variation|snapshot|timeslice|flow|message|binding|calc|enum|frame|variant|dependency|allocation)\\b"
        },
        {
          "name": "storage.modifier.sysml",
          "match": "\\b(package|library|import|alias|abstract|readonly|derived|ordered|nonunique|public|private|protected|standard|in|out|inout|succession|def|end|default|defined|parallel|filter|from|to|via|by|of|as)\\b"
        },
        {
          "name": "keyword.other.relationship.sysml",
          "match": "\\b(specializes|subsets|redefines|references|conjugate|defined\\s+by|typed\\s+by|crosses|connect|allocate|perform|exhibit|include)\\b"
        },
        {
          "name": "keyword.other.requirement.sysml",
          "match": "\\b(require|assume|satisfy|verify|subject|actor|stakeholder|objective|concern|assert)\\b"
        },
        {
          "name": "keyword.other.metadata.sysml",
          "match": "\\b(doc|comment|metadata|about|language|locale|rep|meta)\\b"
        },
        {
          "name": "constant.language.sysml",
          "match": "\\b(true|false|null|all)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.relationship.sysml",
          "match": "(::>|:>>|:>|=>|\\|\\|)"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sysml",
          "match": "//.*$"
        },
        {
          "name": "comment.block.sysml",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sysml",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sysml",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  }
}
